{
  "name": "mdtkit-lint",
  "main": "./lib/mdtkit-lint",
  "version": "0.0.5",
  "description": "A plugin for Atom Linter providing linting for the MDTKit",
  "keywords": [
    "lint",
    "MDTKit",
    "Markdown"
  ],
  "activationCommands": {
    "atom-workspace": "mdtkit-lint:toggle"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/FlorianObermayer/mdtkit-lint"
  },
  "bugs": "https://github.com/FlorianObermayer/mdtkit-lint/issues",
  "license": "MIT",
  "engines": {
    "atom": ">=1.0.0 <2.0.0"
  },
  "scripts": {
    "lint": "eslint ."
  },
  "dependencies": {
    "atom-linter": "latest",
    "atom-package-deps": "latest",
    "loophole": "latest",
    "lodash": "latest",
    "mdtkit-parser": "latest"
  },
  "devDependencies" : {
    "eslint": "^2.9.0",
    "eslint-config-airbnb-base": "^3.0.1",
    "eslint-plugin-import": "^1.7.0"
  },
  "package-deps": [
    "linter",
    "markdown-format"
  ],
  "eslintConfig": {
     "rules": {
       "comma-dangle": 0,
       "global-require": 0,
       "import/no-unresolved": [
         2,
         {
           "ignore": [
             "atom"
           ]
         }
       ]
     },
     "extends": "airbnb-base",
     "globals": {
       "atom": true
     },
     "env": {
       "es6": true,
       "node": true
     }
   },
  "providedServices": {
    "linter": {
      "versions": {
        "1.0.0": "provideLinter"
      }
    }
  }
}
